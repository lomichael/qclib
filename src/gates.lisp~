(defstruct gate
  (name :type symbol)
  (operation :type function)
  (qubits :type list))

(defun hadamard-gate (qubit)
  (make-gate :name 'H
	     :operation #'(lambda (state) ...)
	     :qubits (list qubit)))

(defun pauli-x-gate (qubit)
  (make-gate :name 'X
	     :operation #'(lambda (state) ...)
	     :qubits (list qubit)))

(defun cnot-gate (control target)
  (make-gate :name 'CNOT
	     :operation #'(lambda (state) ...)
	     :qubits (list control target)))
